<select id="selectBox" onchange="changeFunc();" style="text-align:center;-webkit-appearance: none;padding-left:5px;border: 1px solid var(--ba);color:var(--ba);width:auto;cursor:pointer;border-radius:10px;background-color:transparent;font-size:1.25em;text-align-last:center;font-family:var(--bont);">
