<%- include('header') %>
<meta property="og:type" content="website" />
<meta property="og:title" content="AI on ComicServer" />
<meta property="og:description" content="Generate an AI authored comic strip!" />
<title><%= prompt %></title>
<style>
.comic {
object-fit: contain;
width: 90%;
height:auto;
display: block;
margin-left: auto;
margin-right: auto;
}
</style>
<br></br>
<div style="margin-left:10%;margin-right:10%" id="favs">
<img oncontextmenu="return false;" id="imgsrc" class="comic" src="https://www.comicserver.org/src?prompt=<%= prompt %>"/>
</div>
</div>
</div>
<script>
if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
document.getElementById('favs').style.marginLeft = "auto";
document.getElementById('favs').style.marginRight = "auto";
}
if( /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
document.getElementById('haitchpea').style.fontSize = "4vw"
document.getElementById('favs').style.marginLeft = "auto";
document.getElementById('favs').style.marginRight = "auto";
}
document.getElementById('imgsrc').ondragstart = function() { return false; };
function themeClassic() {
  r.style.setProperty('--batext', 'white');
  r.style.setProperty('--basic', '#3699EC');
  r.style.setProperty('--ba', 'white');
  r.style.setProperty('--bont', 'Comic Sans MS');
  r.style.setProperty('--back', "url('https://old.comicserver.org/img/b39571_48033a532a7f450d83cce11188edc23a~mv2.jpg')")
document.getElementById('birthdaytheme').style.backgroundColor = "#3699EC"
  document.getElementById('birthdaytheme').style.width = "70%"
  document.getElementById('birthdaytheme').style.marginLeft = "auto"
  document.getElementById('birthdaytheme').style.padding = "10px"
  document.getElementById('cents').style.maxWidth = "70%"
  document.getElementById('birthdaytheme').style.marginRight = "auto"
document.getElementById('nameplate').style.fontFamily = "Comic Sans MS";
document.getElementById('nameplate').style.fontWeight = "600";
document.getElementById('nameplate').style.fontSize = "4em";
document.getElementById('nameplate').innerText = "ComicServer";
document.getElementById('imgsrc').width = "80%";
document.getElementById('imgsrc').classList.remove('comic');
}
if(localStorage.getItem('theme') === 'welbdays') {
themeClassic();
}
</script>
<%- include('iheader') %>
</div>