</div>
</div>
<select id="themepick" class="btn btn-success" onChange="setStyleSheet(value)"> 
<option disabled selected="selected">Theme</option>
<option value = "https://comicserver.org/css/light.css">Light</option>
<option value = "https://comicserver.org/css/dark.css">Dark</option>
</select>
<select id="btnpick" class="btn btn-primary" onChange="setBtnSettings(value)"> 
<option disabled selected="selected">Buttons</option>
<option value="yes">Enabled</option>
<option value="no">Disabled</option>
</select>
    <script>
    function setBtnSettings(yesno){
       if(yesno === "yes") {
       var element = document.getElementById("button-hidden");
       element.classList.remove("hidden");
       var elementt = document.getElementById("button-hiddenn");
       elementt.classList.remove("hidden");
       var elementtt = document.getElementById("button-hiddennn");
       elementtt.classList.remove("hidden");
       var elementttt = document.getElementById("srch-index");
       elementttt.classList.remove("hidden");
       }
       if(yesno === "no") {
       var element = document.getElementById("button-hidden");
       element.classList.add("hidden");
       var elementt = document.getElementById("button-hiddenn");
       elementt.classList.add("hidden");
       var elementtt = document.getElementById("button-hiddennn");
       elementtt.classList.add("hidden");
       var elementttt = document.getElementById("srch-index");
       elementttt.classList.add("hidden");
       }
       }
    </script>
  <button class="btn btn-secondary" onclick="window.location.href='https://app.comicserver.org/favorites'">Favorites</button>
