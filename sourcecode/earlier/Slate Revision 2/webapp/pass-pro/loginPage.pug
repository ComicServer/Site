	head
		meta(http-equiv="content-type", content="text/html; charset=utf-8")
		meta(name="author", content="ComicServer")
		style
			include style.css	
	body
		.container
			form(action="" method="post")
				img(src='https://comicserver.org/img/Logos/ComicServer/darkhoriz.png' width="100%")
